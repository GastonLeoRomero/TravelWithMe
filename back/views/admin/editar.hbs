<div class="container" style="margin: 100px auto;">
  <div class="row">
    <div class="col-6 offset-3">
      <h3>Editar Paquete Tur√≠stico</h3>
      <form action="/admin/paquetes/editar" method="post">
        <input type="hidden" value="{{paquete.id}}" name="id" />
        <div class="mb-3 row">
          <label for="">Destino</label>
          <input
            type="text"
            class="form-control"
            name="destino"
            value="{{paquete.destino}}"
          />
        </div>
        <div class="mb-3 row">
          <label for="">Hotel</label>
          <input
            type="text"
            class="form-control"
            name="hotel"
            value="{{paquete.hotel}}"
          />
        </div>
        <div class="mb-3 row">
          <label for="">Paquete</label>
          <textarea
            name="paquete"
            class="form-control"
          >{{paquete.paquete}}</textarea>
        </div>
        <button type="submit" class="btn btn-primary">Editar</button>
      </form>
      {{#if error}}
        <p>{{messagge}}</p>
      {{/if}}
    </div>
  </div>
</div>