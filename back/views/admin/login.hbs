<div class="container" style="margin-top: 100px;">
  <div class="row" style="margin: 200px 0;">
    <div class="row">
      <form action="/admin/login" method="post">
        <div class="col-sm-10">
          <div class="mb-3 row">
            <input
              type="text"
              class="form-control"
              placeholder="Usuario"
              name="usuario"
            />
          </div>
        </div>
        <div class="col-sm-10">
          <div class="mb-3 row">
            <input
              type="password"
              class="form-control"
              placeholder="Password"
              name="password"
            />
          </div>
        </div>
        <button type="submit" class="btn btn-success">Entrar</button>
      </form>

      {{#if error}}
        <p>Usuario no reconocido</p>
      {{/if}}
    </div>
  </div>
</div>