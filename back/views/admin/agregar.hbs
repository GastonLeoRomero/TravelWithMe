<div class="container" style="margin: 100px auto;">
  <div class="row">
    <div class="col-6 offset-3">
      <h3>Agregar un Paquete Tur√≠stico</h3>
      <form
        action="/admin/paquetes/agregar"
        method="post"
        enctype="multipart/form-data"
      >
        <div class="mb-3 row">
          <input
            type="text"
            class="form-control"
            placeholder="Destino"
            name="destino"
          />
        </div>
        <div class="mb-3 row">
          <label>Imagen:
            <input type="file" name="imagen" id="imagen" class="form-control" />
          </label>
        </div>
        <div class="mb-3 row">
          <textarea
            type="text"
            class="form-control"
            placeholder="Hotel"
            name="hotel"
          ></textarea>
        </div>
        <div class="mb-3 row">
          <textarea
            type="text"
            class="form-control"
            placeholder="Paquete"
            name="paquete"
          ></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Enviar</button>
      </form>
      {{#if error}}
        <p>{{messagge}}</p>
      {{/if}}
    </div>
  </div>
</div>